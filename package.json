{
  "name": "linter-py",
  "main": "./lib/main",
  "version": "1.0.0-beta1",
  "private": true,
  "description": "Lint python code on the fly (forked from linter-pylint)",
  "repository": "https://github.com/Horta/linter-py",
  "license": "MIT",
  "scripts": {
    "lint": "coffeelint lib & eslint spec"
  },
  "engines": {
    "atom": "^1.8.0-beta3"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "1.0.0": "provideLinter"
      }
    }
  },
  "dependencies": {
    "atom-linter": "^4.7.0",
    "atom-package-deps": "^4.0.1",
    "lodash": "^4.11.1",
    "tmp": "^0.0.28",
    "mkdirp": "^0.5.1"
  },
  "devDependencies": {
    "coffeelint": "^1.15.7",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0"
  },
  "package-deps": [
    "linter"
  ],
  "eslintConfig": {
    "extends": "airbnb/base",
    "globals": {
      "atom": true
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "comma-dangle": 0
    }
  }
}
